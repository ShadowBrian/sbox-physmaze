@using Sandbox
@using Sandbox.UI;
@inherits PanelComponent

<root>
    <div class="logostyle">
        Physics
        Maze
    </div>
</root>

<style>
    .logostyle {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        white-space: nowrap;
        color: white;
        font-size: 200;
        text-shadow: 20px 20px 40px rgba(0, 0, 0, 0.5);
        animation: fadeOut 3s ease-in;
    }
</style>

@code{
    public override void OnStart()
    {
        base.OnStart();
        DeleteSelf();
    }

    public async void DeleteSelf()
    {
        await GameTask.DelayRealtimeSeconds(3f);
        GameObject.Destroy();
    }
}